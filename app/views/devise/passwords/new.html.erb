<div class="row">
  <div class="container">
    <div class="col-md-4 offset-md-4">
      <center class="sign-in-block">
        <%= image_tag(asset_path('logo.png')) %>
        <p class="form-title">Recovery Password</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Please enter your email..." %>
          </div>

          <br />
          <div class="actions">
            <%= f.submit "Continue", class: "btn-primary" %>
          </div>
        <% end %>

      <br />
      <%= render "devise/shared/links" %>
      </center>
    </div>
  </div>
</div>
